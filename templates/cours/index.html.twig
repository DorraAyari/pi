

{% extends "front/base.html.twig" %}
{% block body %}

    <!-- Class Details Section Begin -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="front/img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Classes detail</h2>
                        <div class="bt-option">
                            <a href="./index.html">Home</a>
                            <a href="#">Classes</a>
                            <span>Body building</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Class Details Section End -->
 <!-- Services Section Begin -->
    <section class="services-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                      <span>Our Classes</span>
                        <h2>WHAT WE CAN OFFER</h2>
                    </div>
                </div>
            </div>
            <div class="row">
             {% for cours in cours %}
                <div class="col-lg-4 order-lg-2 col-md-6 p-3">
                    <div class="ss-pic">
                        <img style="width:300x;height:241px;" src="{{ asset('uploads/' ~ cours.image) }}" alt="{{ cours.image }}">
                    </div>
                       <div class="order-lg-2">
                    <div class="ss-text">
                        <h4>{{cours.nom}}</h4>
                        <p>{{cours.description}}</p>
                                                <h4>{{cours.coach.nom}}</h4>

                                <li style="color:white;"><span style="color:white;" >Age :{{cours.coach.age}}</span></li>
                                            <li style="color:white;"><span style="color:white;" >Weight :</span>  <span style="color:white;" > {{cours.coach.weight}} </span></li>
                                            <li style="color:white;"><span style="color:white;" >Height :</span> <span style="color:white;" > {{cours.coach.height}} </span></li>
                                            <li style="color:white;"><span style="color:white;" >Occupation : </span>  <span style="color:white;" > {{cours.coach.occupation}}  </span></li>
                      
                    </div>
                </div>
                </div>
                                 {% endfor %}
           
                
                
            </div>
        </div>
    </section>
    <!-- Services Section End -->


    <!-- ChoseUs Section End -->
    
{% endblock %}