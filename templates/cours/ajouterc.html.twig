{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="{{ asset('css/coursa.css') }}" rel="stylesheet">
     <style>
    .my-input {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    box-shadow: inset 0 1px;}
      .is-invalid {
            border-color: red;
        }
    .form-control.is-invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + .75rem);
            background-image: url('data:image/svg+xml,%3csvg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16"%3e%3cpath d="M8.572 1.238a1.08 1.08 0 0 1 1.856 0l6.572 11.238c.438.75-.106 1.724-.928 1.724H2.928c-.822 0-1.366-.974-.928-1.724L8.572 1.238zm.26 11.453a1.2 1.2 0 1 1-2.066 0 1.2 1.2 0 0 1 2.066 0zm-.184-2.07a.4.4 0 0 1-.4-.4v-4.8a.4.4 0 0 1 .4-.4.4.4 0 0 1 .4.4v4.8a.4.4 0 0 1-.4.4z" /%3e%3c/svg%3e');
            background-repeat: no-repeat;
            background-position: right calc(.375em + .1875rem) center;
            background-size: calc(.75em + .375rem) calc(.75em + .375rem);
        }
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/esm/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white font-weight-bold"> Add course</div>
                    <div class="card-body">
                        {{ form_start(cours, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(cours.nom, 'Nom', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(cours.nom, {'attr': {'class': 'form-control my-input', 'placeholder': 'Entrez le nom du cours'}}) }}
                              {% if form_errors(cours.nom) %}
                                    <span class="text-danger">{{ form_errors(cours.nom) }}</span>
                                {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(cours.description, 'Description', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(cours.description, {'attr': {'class': 'form-control my-input', 'placeholder': 'Entrez une description du cours'}}) }}
                              {% if form_errors(cours.description) %}
                                    <span class="text-danger">{{ form_errors(cours.description) }}</span>
                                {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(cours.image, 'Photo', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(cours.image, {'attr': {'class': 'form-control my-input'}}) }}
                            {{ form_errors(cours.image, {'attr': {'class': 'invalid-feedback'}}) }}
                        </div>
                      <div class="form-group">
    {{ form_label(cours.Coach, 'Coach', {'label_attr': {'class': 'font-weight-bold'}}) }}
    {{ form_row(cours.Coach, {'attr': {'class': 'form-control my-input'}}) }}
      {% if form_errors(cours.Coach) %}
                                    <span class="text-danger">{{ form_errors(cours.Coach) }}</span>
                                {% endif %}
</div>

<div class="form-group">
    {{ form_label(cours.Salle, 'Salle', {'label_attr': {'class': 'font-weight-bold'}}) }}
    {{ form_row(cours.Salle, {'attr': {'class': 'form-control my-input'}}) }}
     {% if form_errors(cours.Salle) %}
                                    <span class="text-danger">{{ form_errors(Salle.Coach) }}</span>
                                {% endif %}
</div>

                        <div class="form-group d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary mr-3">Add</button>
                            <a href="{{ path('readc') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                        {{ form_end(cours) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
