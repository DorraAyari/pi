<script>
const stars = document.querySelectorAll('#rating-form .rating input[type="radio"]');
const starsValue = document.querySelector('#rating-form #stars');

// Récupère la valeur stockée dans le stockage local
const savedValue = localStorage.getItem('selectedStar');

// Si une valeur est stockée, définissez-la comme valeur par défaut
if (savedValue) {
  stars.forEach((star) => {
    if (star.value === savedValue) {
      star.checked = true;
      starsValue.value = savedValue;
    }
  });
}

stars.forEach((star) => {
  star.addEventListener('click', () => {
    starsValue.value = star.value;
  });
});

// Événement beforeunload pour sauvegarder la valeur sélectionnée
window.addEventListener('beforeunload', () => {
  localStorage.setItem('selectedStar', starsValue.value);
});


</script>

