
{% block stylesheets %}

 <style>
.rating input {
  display: none;
}

.rating label {
  font-size: 30px;
  color: #ccc;
  cursor: pointer;
}

.rating label:hover,
.rating label:hover ~ label {
  color: red;
}

.rating input:checked ~ label {
  color: red;
}
</style>
{% endblock %}
