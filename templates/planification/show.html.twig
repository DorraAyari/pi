{% extends "admin/base.html.twig" %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/calendar.css') }}">

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/calendar.js') }}"></script>

{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="d-flex justify-content-between">
                <h1><i class="fas fa-calendar-alt"></i> Calendar</h1>
                <div class="btn-group" role="group">
                    <a href="{{ path('app_planification_edit', {'id': calendar.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
                    <a href="{{ path('app_planification_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ calendar.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ calendar.title }}</td>
                    </tr>
                    <tr>
                        <th>Start</th>
                        <td>{{ calendar.start ? calendar.start|date('d/m/Y H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>End</th>
                        <td>{{ calendar.end ? calendar.end|date('d/m/Y H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ calendar.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Background Color</th>
                        <td{% if calendar.backgroundColor %} style="background-color:{{ calendar.backgroundColor }};"{% else %}  style="background-color:#808080;"{% endif %}></td>
                    </tr>
                    <tr>
                        <th>Border Color</th>
                        <td{% if calendar.borderColor %} style="background-color:{{ calendar.borderColor }};"{% else %} style="background-color:#808080;"{% endif %}></td>
                    </tr>
                    <tr>
                        <th>Text Color</th>
                        <td{% if calendar.textColor %} style="background-color:{{ calendar.textColor }};"{% else %} style="background-color:#808080;"{% endif %}></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

