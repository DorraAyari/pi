    /* Container */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    .header {
        text-align: center;
    }

    /* Coach Card */
    .coach-card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.25rem;
    }

    .coach-card-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .coach-card-details {
        flex: 1 1 auto;
        padding: 1.25rem;
        text-align: center;
    }

    .coach-card-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .coach-card-properties {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .coach-card-property {
        font-size: 16px;
        margin: 5px;
    }

    .coach-card-property-label {
        font-weight: bold;
        margin-right: 5px;
    }

    .coach-card-property-value {
        color: #6c757d;
    }
</style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Coach List</h1>
    </div>
    <div class="coach-list">
        {% for coach in coach %}
            <div class="coach-card">
                <div class="coach-card-details">
                    <h2 class="coach-card-name">{{ coach.nom }}</h2>
                    <ul class="coach-card-properties">
                        <li class="coach-card-property">
                            <span class="coach-card-property-label">Age:</span>
                            <span class="coach-card-property-value">{{ coach.age }}</span>
                        </li>
                        <li class="coach-card-property">
                            <span class="coach-card-property-label">Description:</span>
                            <span class="coach-card-property-value">{{ coach.description}}</span> </li>

  <li class="coach-card-property">
                            <span class="coach-card-property-label">Height:</span>
                            <span class="coach-card-property-value">{{ coach.height}}</span> </li>
<li class="coach-card-property">
                            <span class="coach-card-property-label">Weight:</span>
                            <span class="coach-card-property-value">{{ coach.weight}}</span> </li>

<li class="coach-card-property">
                            <span class="coach-card-property-label">Occupation:</span>
                            <span class="coach-card-property-value">{{ coach.occupation}}</span> </li>





                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
