{% extends "admin/base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
/* Personnalisation des labels des champs de saisie */
label {
  font-weight: bold;
  margin-bottom: 5px;
}
.invalid-feedback {
  color: red;
}
/* Personnalisation des champs de saisie */
input[type="text"], input[type="number"] {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-bottom: 15px;
}

/* Personnalisation du bouton de soumission */
button[type="submit"] {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
 
    .my-input {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    box-shadow: inset 0 1px;
    }
      .invalid-feedback {
            border-color: red;
        }
/* Personnalisation du bouton de soumission lorsqu'il est survol√© */
button[type="submit"]:hover {
  background-color: #45a049;
}  </style>
{% endblock %}

{% block body %}
  <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white font-weight-bold"> Add course</div>
                    <div class="card-body">
{{ form_start(coach, {'attr': {'novalidate': 'novalidate', 'class': 'form', 'enctype': 'multipart/form-data'}}) }}
            <div class="form-group row">
              {{ form_label(coach.nom, "Nom", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
              <div class="col-sm-10">
                {{ form_widget(coach.nom, {'attr': {'class': 'form-control my-input'}}) }}
                  {% if form_errors(coach.nom) %}
                                    <span class="text-danger">{{ form_errors(coach.nom) }}</span>
                                {% endif %}
              </div>
            </div>
            <div class="form-group row">
              {{ form_label(coach.description, "Description", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
              <div class="col-sm-10">
                {{ form_widget(coach.description, {'attr': {'class': 'form-control my-input'}}) }}
                {% if form_errors(coach.description) %}
                                    <span class="text-danger">{{ form_errors(coach.description) }}</span>
                                {% endif %}
              </div>
            </div>
            <div class="form-group row">
    {{ form_label(coach.image, 'Photo', {'label_attr': {'class': 'font-weight-bold col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(coach.image, {'attr': {'class': 'form-control-file'}}) }}
                                   {{ form_errors(coach.image, {'attr': {'class': 'invalid-feedback'}}) }}

    </div>
</div>
            <div class="form-group row">
              {{ form_label(coach.age, "Age", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
              <div class="col-sm-10">
                {{ form_widget(coach.age, {'attr': {'class': 'form-control my-input'}}) }}
  {% if form_errors(coach.age) %}
                                    <span class="text-danger">{{ form_errors(coach.age) }}</span>
                                {% endif %}              </div>
            </div>
            <div class="form-group row">
              {{ form_label(coach.weight, "Poids", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
              <div class="col-sm-10">
                {{ form_widget(coach.weight, {'attr': {'class': 'form-control my-input'}}) }}
 {% if form_errors(coach.weight) %}
                                    <span class="text-danger">{{ form_errors(coach.weight) }}</span>
                                {% endif %}              </div>
            </div>
            <div class="form-group row">
              {{ form_label(coach.height, "Taille", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
              <div class="col-sm-10">
                {{ form_widget(coach.height, {'attr': {'class': 'form-control my-input'}}) }}
 {% if form_errors(coach.height) %}
                                    <span class="text-danger">{{ form_errors(coach.height) }}</span>
                                {% endif %}  </div>
</div>



<div class="form-group row">
{{ form_label(coach.occupation, "Occupation", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
<div class="col-sm-10">

{{ form_widget(coach.occupation, {'attr': {'class': 'form-control my-input'}}) }}
 {% if form_errors(coach.occupation) %}
                                    <span class="text-danger">{{ form_errors(coach.occupation) }}</span>
                                {% endif %} 
</div>
</div>
<div class="form-group row">
<div class="col-sm-10 offset-sm-2">
<button type="submit" class="btn btn-primary">Add</button>
</div>
</div>
{{ form_end(coach) }}
</div>
</div>
</div>

  </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{% endblock %}