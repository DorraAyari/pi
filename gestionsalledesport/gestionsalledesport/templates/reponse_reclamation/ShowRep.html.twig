                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_reponse_reclamation_index') }}"class="primary-btn btn-lg">Retour</a>


    </div>
{% endblock %}
