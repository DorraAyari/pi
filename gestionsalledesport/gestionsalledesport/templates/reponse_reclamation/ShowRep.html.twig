{% extends 'admin/base.html.twig' %}

{% block title %}ReponseReclamation index{% endblock %}

{% block body %}
    <div class="container">
        <h1>ReponseReclamation index</h1>

        <<table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Reponse</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for rep in reponses %}
                    <tr>
                        <td>{{ rep.id }}</td>
                        <td>{{ rep.reponse }}</td>

                        <td>
                            <a href="{{ path('app_reponse_reclamation_edit', {'id': rep.id}) }}" class="fa fa-edit btn btn-warning btn-lg">Edit</a>
                            <a href="{{ path('app_reponse_reclamation_delete', {'id': rep.id}) }}" class="fa fa-edit btn btn-danger btn-lg">Delete</a>
