{% extends 'admin/base.html.twig' %}

{% block title %}ReponseReclamation index{% endblock %}

{% block body %}
    <div class="container">
        <h1>ReponseReclamation index</h1>

        <<table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.id }}</td>
                        <td>{{ reclamation.Nom }}</td>
                        <td>{{ reclamation.Prenom }}</td>
                        <td>{{ reclamation.Email }}</td>
                        <td>{{ reclamation.Message }}</td>

                        <td>
                            <a href="{{ path('app_reponse_reclamation_new', {'id': reclamation.id}) }}" class="fa fa-edit btn btn-primary btn-lg">Repondre</a>
                            <a href="{{ path('app_reponse_reclamation_index_rep', {'id': reclamation.id}) }}" class="fa fa-eye btn btn-info btn-lg">Voir Reponses</a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(reclamations) }}


    </div>
{% endblock %}
